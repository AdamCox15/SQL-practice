Queries Practice SQL

SELECT * FROM movies;

SELECT name, genre, year
FROM movies;

SELECT name AS 'Rook'
FROM movies;

SELECT imdb_rating AS 'IMDb'
FROM movies;

--------- Using DISTINCT ---------

SELECT DISTINCT genre
FROM movies;

SELECT DISTINCT year
FROM movies;

---------------------------------

SELECT * FROM movies
WHERE imdb_rating < 5;

SELECT * FROM movies
WHERE year >  2014;

----------- Using WHERE with LIKE ------

SELECT * FROM movies
WHERE name LIKE 'Se_en';

SELECT * FROM movies
WHERE name LIKE '%man%';

SELECT * FROM movies
WHERE name LIKE 'The %';

----------- Using WHERE with IS NULL ------

SELECT name
FROM movies
WHERE imdb_rating IS NULL;

------ Using WHERE with BETWEEN ------

SELECT * FROM movies
WHERE name BETWEEN 'D' and "G";

SELECT * FROM movies
WHERE year BETWEEN 1970 AND 1979;

SELECT * FROM movies
WHERE year BETWEEN 1970 AND 1979
  AND imdb_rating > 8;
  
SELECT * FROM movies
WHERE genre LIKE 'horror'
  AND year < 1985;
  
------ Using OR -----

SELECT * FROM movies
WHERE year > 2014
  OR genre = 'action';
  
SELECT * FROM movies
WHERE genre = 'romance'
  or genre = 'comedy';
  
------- Using ORDER BY --------

SELECT name, year
FROM movies
ORDER BY name;

SELECT name, year, imdb_rating FROM movies
ORDER BY imdb_rating DESC;

SELECT name, year FROM movies
ORDER BY name;

